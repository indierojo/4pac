@model dynamic

@{
    Layout = null;
    Response.Headers["X-UA-Compatible"] = "IE=10";
}
<!DOCTYPE html>

<html>
    <head>
        <title>Bouncing Ball Test</title>
        <style>
            body {
                background: #ddd;
            }

            #canvas {
                margin-left: 10px;
                margin-right: 10px;
                background: #fff;
                border: thin solid #aaa;
            }

            #glasspane {
                position: absolute;
                left: 50px;
                top: 50px;
                padding: 0 20px 10px 10px;
                background: #000000;
                background: rgba(0, 0, 0, 0.3);
                border: thin solid #000000;
                border: thin solid rgba(0, 0, 0, 0.6);
                color: #eee;
                font-family: Droid Sans, Arial, Helvetica, sans-serif;
                font-size: 12px;
                cursor: pointer;
                -webkit-box-shadow: rgba(0, 0, 0, 0.5) 5px 5px 20px;
                -ms-box-shadow: rgba(0, 0, 0, 0.5) 5px 5px 20px;
                box-shadow: #000000 5px 5px 20px;
                box-shadow: rgba(0, 0, 0, 0.5) 5px 5px 20px;
            }
            
            #glasspane h2 {
                font-weight: normal;
            }

            #glasspane .title {
                font-size: 2em;
                color: #ffff00;
                color: rgba(255, 255, 0, 0.8);
            }

            #glasspane a:hover {
                color: yellow;
            }

            #glasspane a {
                text-decoration: none;
                color: #ccc;
                font-size: 3.5em;
            }

            #glasspane p {
                margin: 10px;
                color: #4141dc;
                color: rgba(65, 65, 220, 1.0);
                font-size: 12pt;
                font-family: Palatino, Arial, Helvetica, sans-serif;
            }
        </style>
    </head>
    <body>
        <div id="glasspane">
            <h2 class="title">Bouncing Balls</h2>
            <p>One hundred balls Bouncing</p>
            <a id="startButton" href="">Start</a>
        </div>
        <canvas id="canvas" width="750" height="500">
            Canvas not supported.
        </canvas>
        @Scripts.Render("~/app/balls.js")
    </body>
</html>